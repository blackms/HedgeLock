# HedgeLock Configuration Template
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=development
SERVICE_NAME=hedgelock

# Kafka Configuration
KAFKA__BOOTSTRAP_SERVERS=localhost:9092
KAFKA__CONSUMER_GROUP_PREFIX=hedgelock
KAFKA__PRODUCER_TIMEOUT_MS=10000
KAFKA__CONSUMER_TIMEOUT_MS=10000
KAFKA__MAX_POLL_RECORDS=500
KAFKA__ENABLE_AUTO_COMMIT=false

# Kafka Topics
KAFKA__TOPIC_ACCOUNT_RAW=account_raw
KAFKA__TOPIC_RISK_STATE=risk_state
KAFKA__TOPIC_HEDGE_TRADES=hedge_trades
KAFKA__TOPIC_TREASURY_ACTIONS=treasury_actions

# Bybit Configuration
BYBIT__API_KEY=your_api_key_here
BYBIT__API_SECRET=your_api_secret_here
BYBIT__TESTNET=true
BYBIT__REST_RATE_LIMIT=10
BYBIT__WS_PING_INTERVAL=20
BYBIT__COLLATERAL_POLL_INTERVAL=5
BYBIT__LOAN_POLL_INTERVAL=5

# Risk Engine Configuration
RISK__LTV_NORMAL_THRESHOLD=0.5
RISK__LTV_CAUTION_THRESHOLD=0.65
RISK__LTV_DANGER_THRESHOLD=0.8
RISK__LTV_CRITICAL_THRESHOLD=0.9
RISK__NET_DELTA_NORMAL=0.0
RISK__NET_DELTA_CAUTION=0.02
RISK__NET_DELTA_DANGER=0.0
RISK__NET_DELTA_CRITICAL=-0.1
RISK__MAX_PROCESSING_LATENCY_MS=150

# Hedger Configuration
HEDGER__ORDER_TYPE=Market
HEDGER__TIME_IN_FORCE=IOC
HEDGER__MAX_POSITION_SIZE_BTC=10.0
HEDGER__MIN_ORDER_SIZE_BTC=0.001
HEDGER__CAUTION_HEDGE_SIZE_BTC=0.02
HEDGER__DANGER_HEDGE_SIZE_BTC=0.05
HEDGER__CRITICAL_HEDGE_SIZE_BTC=0.1

# Monitoring Configuration
MONITORING__METRICS_PORT=9090
MONITORING__METRICS_PATH=/metrics
MONITORING__LOG_LEVEL=INFO
MONITORING__LOG_FORMAT=json
MONITORING__LOG_FILE=
MONITORING__HEALTH_CHECK_INTERVAL=30
MONITORING__READINESS_TIMEOUT=5