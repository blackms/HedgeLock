# HedgeLock Environment Variables
# Copy this file to .env and fill in your values

# Service Configuration
LOG_LEVEL=INFO
DEBUG=false

# Bybit API Configuration
BYBIT_API_KEY=your_api_key_here
BYBIT_API_SECRET=your_api_secret_here
BYBIT_TESTNET=true

# Database Configuration
DATABASE_URL=postgresql://hedgelock:hedgelock@localhost:5432/hedgelock
REDIS_URL=redis://localhost:6379

# Risk Engine Configuration
LTV_TARGET_RATIO=40
LTV_MAX_RATIO=50
LTV_CAUTION_RATIO=45
LTV_DANGER_RATIO=48

# Hedger Configuration
MAX_ORDER_SIZE_BTC=10.0
MAX_POSITION_SIZE_BTC=50.0
MAX_ORDERS_PER_MINUTE=20
MIN_ORDER_SIZE_BTC=0.001
MAX_SLIPPAGE_BPS=50

# Treasury Configuration
MIN_BUFFER_PERCENT=5
MAX_SINGLE_OPERATION_USD=10000
DAILY_OPERATION_LIMIT_USD=50000

# Alert Service Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ALERT_EMAIL_TO=alerts@example.com

# Kafka Configuration (for future use)
# KAFKA_BOOTSTRAP_SERVERS=localhost:9092
# KAFKA_SECURITY_PROTOCOL=PLAINTEXT
# KAFKA_GROUP_ID=hedgelock-group